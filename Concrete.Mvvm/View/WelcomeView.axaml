<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Concrete.Mvvm.View.WelcomeView">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <TextBlock HorizontalAlignment="Center" Margin="10" Grid.ColumnSpan="2" Grid.Row="0" FontSize="30">Welcome to Concrete!</TextBlock>


    <StackPanel Grid.Row="1" Grid.Column="1" Margin="20" HorizontalAlignment="Center">
      <TextBlock FontSize="20">Create new</TextBlock>
    </StackPanel>


    <StackPanel Grid.Row="1" Grid.Column="0" Margin="20" HorizontalAlignment="Center">
      <TextBlock FontSize="20">Load existing</TextBlock>
    </StackPanel>
    
    <StackPanel HorizontalAlignment="Center" Margin="10" Grid.Row="2" Grid.Column="1">
      <Button>Close</Button>
    </StackPanel>
    
  </Grid>
</UserControl>
