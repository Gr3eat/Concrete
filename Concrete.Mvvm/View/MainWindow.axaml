<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Concrete.Mvvm.ViewModel;assembly=Concrete.Mvvm"
        xmlns:v="clr-namespace:Concrete.Mvvm.View;assembly=Concrete.Mvvm"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Concrete.Mvvm.View.MainWindow"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        Title="Concrete">
  <Window.DataTemplates>
    <DataTemplate DataType="{x:Type vm:CourseEditViewModel}">
      <v:CourseEditView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
      <v:WelcomeView/>
    </DataTemplate>
  </Window.DataTemplates>
  <Panel>
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
            BackgroundSource="Digger"
            TintColor="Black"
            TintOpacity="1"
            MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>
    <ContentControl Margin="0" Content="{Binding VM}"/>
  </Panel>
</Window>
